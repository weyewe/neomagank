

<% content_for :head  do %>
  <%= stylesheet_link_tag "css.easyslider"%>
  <%= javascript_include_tag "jquery.easyslider"%>
  <script type="text/javascript">
    $(document).ready(function(){
      $("#slide2").easySlider({
  			auto: true, 
  			continuous: false,
  			speed: 800,
  			controlsShow: true,
  			numeric: true,
  			numericId: 'controls'
  		});
    });
  	
  </script>
<% end %>
